{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2019",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["es2021"],
    "types": ["chai", "inquirer", "listr", "node", "node-emoji"]
  },
  "include": ["src/**/*"],
  "ts-node": {
    "esm": true
  }
}
